<p><i>Siparişiniz onaylandı. Ana Sayfaya yönelendiriliyorsunuz...</i></p>



@{
    int redirectDelay = 3000;
    string redirectUrl = "/hamburger/Index";



    string script = $@"
<script>
                setTimeout(function() {{
                    window.location.href = '{redirectUrl}';
                }}, {redirectDelay});
</script>
        ";



    @Html.Raw(script)
}