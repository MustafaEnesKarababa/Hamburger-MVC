@model IEnumerable<IdentitySonProje.Entities.Extra>

@{
    ViewData["Title"] = "Index";
}

<h1><i>Extra List</i></h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
    <a asp-action="Index" asp-controller="Panel" class="btn btn-primary">Back To Index</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="">
@foreach (var item in Model) {
        <tr class="align-middle">
            <td> 
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    <img src="~/ExtraIMages/@item.ImageName" width="120" height="110">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExtraId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ExtraId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ExtraId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
