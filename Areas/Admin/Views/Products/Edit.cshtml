@model IdentitySonProje.Models.ViewModels.ProductVM

@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.Product.Name Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductId" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Product.ImageName" class="control-label">Image</label>*@
                <input asp-for="Product.ImageName" class="form-control" type="hidden"/>
                <img src="~/ProductImages/@Model.Product.ImageName" width="90" height="150" />
                <input class="form-control" type="file" name="productImage" accept=".jpg,.png" />
                <span asp-validation-for="Product.ImageName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label">Category</label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="@Model.Categories"></select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
